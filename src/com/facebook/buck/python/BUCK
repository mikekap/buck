  name = 'config',
  srcs = CONFIG_SRCS,
  deps = [
    '//src/com/facebook/buck/cli:config',
    '//src/com/facebook/buck/io:io',
    '//src/com/facebook/buck/util:exceptions',
    '//src/com/facebook/buck/util:io',
    '//third-party/java/guava:guava',
    ':support',
  ],
  visibility = ['PUBLIC'],
)

